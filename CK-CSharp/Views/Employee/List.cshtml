@{
}

@model IEnumerable<CK_CSharp.Models.Employee>

@{
    ViewData["Title"] = "List Employee";
}

<h1>Employee List</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DepartmentName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImagePath)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DepartmentName)
                </td>
                <td>
                    <img src="@item.ImagePath" width="100" alt="image" />
                </td>
                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-controller="Employee" asp-route-id="@item.EmployeeId">Sửa</a> |
                    <a class="btn btn-primary" asp-action="Detail" asp-controller="Employee" asp-route-id="@item.EmployeeId">Chi Tiết</a> |
                    <button class="btn btn-danger delete-button" data-id="@item.EmployeeId">Xoá</button>
                </td>
            </tr>
        }

        @section Scripts {
            <script>
                $(document).ready(function () {
                    $('.delete-button').click(function () {
                        var id = $(this).data('id');
                        $.ajax({
                            url: "/Employee/Delete/" + id,
                            type: 'POST',
                            success: function (result) {
                                location.reload();
                            },
                            error: function () {
                                alert('Đã xảy ra lỗi khi xóa mục.');
                            }
                        });
                    });
                });
            </script>
        }
    </tbody>
</table>




