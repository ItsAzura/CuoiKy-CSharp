@{
}

@model CK_CSharp.Models.Department

@{
    ViewData["Title"] = "Edit Department";
}

@section Styles {
    <link rel="stylesheet" href="~/css/Edit.css" />
}

<h1 class="Add_title">EDIT DEPARTMENT</h1>

@if(Model is null) {
    <p>Không Tìm Thấy Department</p>
}

@if(Model is not null)
{
    <form asp-action="Edit" method="post">
        <div class="form-group">
            <p asp-for="DepartmentId" class="Add_lable">ID Phòng Ban</p>
            <input asp-for="DepartmentId" class="form-control" readonly />
            <span asp-validation-for="DepartmentId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <p asp-for="Name" class="Add_lable">Tên Phòng Ban</p>
            <input asp-for="Name" class="form-control" required title="Vui lòng nhập tên phòng ban" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <p asp-for="Description" class="Add_lable">Mô Tả</p>
            <input asp-for="Description" class="form-control" required title="Vui lòng nhập mô tả phòng ban" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <p asp-for="CompanyId" class="Add_lable">ID Công Ty</p>
            <input asp-for="CompanyId" class="form-control" required title="Vui lòng chọn công ty" />
            <span asp-validation-for="CompanyId" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Lưu</button>
        <a class="btn btn-danger" asp-action="List" asp-controller="Department">Huỷ</a>
    </form>
}

 <!-- Hiển thị thông báo lỗi tổng quát -->
@Html.ValidationSummary(true, "", new { @class = "text-danger" })