@model CK_CSharp.Models.Category

@{
    ViewData["Title"] = "Add Category";
}

@section Styles {
    <link rel="stylesheet" href="~/css/Add.css" />
}

<h1 class="Add_title">ADD CATEGORY</h1>

<form asp-action="Add" method="post">
    <div class="form-group">
        <p asp-for="Name" class="Add_lable">Tên Thể Loại</p>
        <input asp-for="Name" class="form-control" required />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <p asp-for="Description" class="Add_lable">Mô Tả</p>
        <input asp-for="Description" class="form-control" required  />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

     <button type="submit" class="btn btn-primary">Thêm</button>
    <a class="btn btn-danger" asp-action="List" asp-controller="Category">Huỷ</a>
</form>

@Html.ValidationSummary(true, "", new { @class = "text-danger" })


