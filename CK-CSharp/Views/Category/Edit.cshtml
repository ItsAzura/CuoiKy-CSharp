@{
}

@model CK_CSharp.Models.Category

@{
    ViewData["Title"] = "Edit Category";
}

@section Styles {
    <link rel="stylesheet" href="~/css/Edit.css" />
}

<h1 class="Add_title">EDIT CATEGORY</h1>

@if (Model is null)
{
    <p>Không Tìm Thấy Catogory</p>
}
@if (Model is not null)
{
    <form asp-action="Edit" method="post">
        <div class="form-group">
            <p asp-for="CategoryId" class="Add_lable">ID Thể Loại</p>
            <input asp-for="CategoryId" class="form-control" readonly />
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <p asp-for="Name" class="Add_lable">Tên Thể Loại</p>
            <input asp-for="Name" class="form-control" required />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <p asp-for="Description" class="Add_lable">Mô Tả</p>
            <input asp-for="Description" class="form-control" required />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Lưu</button>
        <a class="btn btn-danger" asp-action="List" asp-controller="Category">Huỷ</a>
    </form>
}

