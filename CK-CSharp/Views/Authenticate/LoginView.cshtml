@model CK_CSharp.Models.UserLogin

@section Styles {
    <link rel="stylesheet" href="~/css/Login.css" />
}
<div class="Login_container">
    <div class="Login_container_left">
        <h1 class="Login_title">Đăng Nhập</h1>

        <form asp-controller="Authenticate" asp-action="LoginUser" method="post" class="Login_form">
            <div class="Login_GroupInput">
                <label asp-for="UserOrEmail">Tên Đăng Nhập Hoặc Email</label>
                <input asp-for="UserOrEmail" />
            </div>
            <div class="Login_GroupInput">
                <label asp-for="Password">Mật Khẩu</label>
                <input asp-for="Password" />
            </div>

            <button type="submit" class="Login_btn">Đăng Nhập</button>
            <div>
                <a asp-controller="Authenticate" asp-action="RegisterView" class="Login_RegisterBtn">Đăng ký</a>
            </div>
        </form>
    </div>

    <div class="Login_container_right">
        <img src="~/image/Login.png" alt="Login" class="Login_img" />
    </div>
</div>


